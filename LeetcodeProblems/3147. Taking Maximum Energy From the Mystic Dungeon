class Solution {
public:
    int maximumEnergy(vector<int>& energy, int k) {
        int n= energy.size();
        vector<int> dp(n, 0);
        int rs= INT_MIN;
        for(int i=n-1; i>=0; i--){
            dp[i]= energy[i];
            if(i+k<=n-1){
                dp[i]+= dp[i+k];
            }
            rs= max(rs, dp[i]);
        }   
        return rs;
    }
};
